<h1>Agregar Producto</h1>

<div class="row">
    <div class="col-md-6">
        <form id="add-product-form">
            <div class="mb-3">
                <label for="title" class="form-label">Título del producto</label>
                <input type="text" class="form-control" id="title" placeholder="Título del producto" required>
            </div>
            <div class="mb-3">
                <label for="price" class="form-label">Precio</label>
                <input type="number" class="form-control" id="price" placeholder="Precio" required>
            </div>
            <button type="submit" class="btn btn-primary">Agregar Producto</button>
        </form>
    </div>

</div>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/realtime.js"></script>